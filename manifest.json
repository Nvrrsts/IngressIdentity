{
    "manifest_version": 2,

    "name": "Ingress Identity",
    "version": "0.1",
    "description": "Adds Ingress identity to G+ profiles",

    "permissions": [ "storage" ],
    "optional_permissions": [ "tabs", "https://*.google.com/*" ],

    "background": {
       "page": "background.html"
    },

    "options_page": "options.html",

    "content_security_policy": "script-src 'self' https://www.google.com https://spreadsheets.google.com; object-src 'self'",
    "content_scripts": [
        {
            "matches": [ "https://plus.google.com/*" ],
            "run_at": "document_end",
            "css": [ "css/content.css" ],
            "js": [ "vendor/js/jquery.min.js", "js/log.js", "js/communication.js", "js/content.js" ]
        }
    ]
}
