#!/bin/bash

set -e;

cd $(dirname "$0")/..;

log() {
    echo "$@" >&2
}

log "Building..."
bin/build
log "Building done"

cd build

buildversion=$(grep -F '"version"' manifest.json | cut -d':' -f2 | tr -d ' ",')

log "Creating zip..."
zip -r "../versions/v$buildversion.zip" .
log "Zip created at versions/v$buildversion.zip"
