include ./_mixins

doctype html
html(data-translate-prefix='search')
    head
        title(data-translate-name='title') IngressIdentity Search

        // Bootstrap CSS
        +css_lib('bootstrap')

        // Our CSS
        +css('search')

        unless browser === 'firefox'
            // jQuery, Sugar and Bootstrap JS
            +js_lib('jquery')
            +js_lib('jquery-ui')
            +js_lib('sugar')
            +js_lib('bootstrap')

            // Our JS
            +js('search')

    body
        +ingress_background
            +row
                h1(data-translate-name='title') IngressIdentity Search
                p(data-translate-name='intro').
                    This page allows you to see what data the extension has about
                    certain people, as well as which source files mention them.
            +row.search
                h2 Search
                div
                    form.search(role='form', action='#')
                        .form-group
                            label(for='search_name') Name
                            input#search_name(class='form-control', type='text')
                        .form-group
                            label(for='search_nickname') Nickname
                            input#search_nickname(class='form-control', type='text')
                        div
                            .checkbox
                                label
                                    input#search_enable_extra(type='checkbox')
                                    | Enable extra search patterns? This will make the search significantly slower!
                            .form-group
                                label(for='search_faction') Faction
                                select#search_faction(class='form-control', disabled)
                                    option(value='unknown', selected) Unknown
                                    option(value='enlightened') Enlightened
                                    option(value='resistance') Resistance
                            .form-group
                                label(for='search_anomalies') Anomalies
                                select#search_anomalies(class='form-control', multiple, disabled)
                                    option(value='13magnus') 13Magnus
                                    option(value='recursion') Recursion
                                    option(value='interitus') Interitus
                                    option(value='initio') Initio
                                    option(value='helios') Helios
                        .form-group
                            button.search(type='button', class='btn btn-primary')
                                span.glyphicon.glyphicon-search
                                | Search
            +row
                h2 Results
                .results
